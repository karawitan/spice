#!/usr/bin/env python
# -*- coding: utf-8 -*-

import sys
import os

if sys.version_info[0] == 2:
    import __builtin__ as builtins
else:
    import builtins

USE_CHECKOUT_SRC = False

if USE_CHECKOUT_SRC:
    sys.path.insert(0, '@jhbuilddir@')
    pkgdatadir = None
    datadir = None
    import jhbuild
    srcdir = os.path.abspath(os.path.join(os.path.dirname(jhbuild.__file__), '..'))
else:
    pkgdatadir = "/Users/kalou/spice/jhbuild-install/share/jhbuild"
    datadir = "/Users/kalou/spice/jhbuild-install/share"
    srcdir = "/Users/kalou/spice/jhbuild-src"
    if '/Users/kalou/spice/jhbuild-install/lib/python3.13/site-packages' not in sys.path:
        sys.path.insert(0, '/Users/kalou/spice/jhbuild-install/lib/python3.13/site-packages')
    try:
        import jhbuild
    except ImportError:
        sys.path.insert(0, srcdir)

builtins.__dict__['PKGDATADIR'] = pkgdatadir
builtins.__dict__['DATADIR'] = datadir
builtins.__dict__['SRCDIR'] = srcdir

import jhbuild.main
jhbuild.main.main(sys.argv[1:])
